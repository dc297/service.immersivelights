<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.immersivelights"
    name="Immersive lights" version="0.0.8" provider-name="dc297">
  <requires>
    <import addon="xbmc.addon"  version="20.0.0"/>
    <import addon="xbmc.python" version="3.0.1"/>
    <import addon="script.module.pil" version="5.1.0"/>
    <import addon="script.module.requests" version="2.31.0"/>
  </requires>
  <extension point="xbmc.service" library="service.py" />
  <extension point="xbmc.python.module" library="resources/lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Control your smart lights from kodi</summary>
    <description lang="en_GB">Enhance your experience by syncing your smart lights with whatever's on your screen on Kodi.</description>
    <platform>all</platform>
    <license>MIT</license>
    <forum>https://forum.kodi.tv/showthread.php?tid=1</forum>
    <source>https://github.com/dc297/immersivelights</source>
    <assets>
    	<icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
    <news>First release</news>
  </extension>
</addon>
